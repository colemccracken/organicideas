{
  "name": "organicthoughts-ghost-launch",
  "version": "1.0.0",
  "private": true,
  "description": "Operations tooling for organicthoughts.me on Ghost(Pro)",
  "packageManager": "bun@1.3.5",
  "scripts": {
    "dev:site": "bunx live-server ./site --port=4173 --host=127.0.0.1 --watch=./site --no-browser",
    "dev:ghost": "bash ./scripts/local-ghost-up.sh",
    "dev:ghost:down": "bash ./scripts/local-ghost-down.sh",
    "dev:ghost:logs": "bash ./scripts/local-ghost-logs.sh",
    "theme:zip": "bash ./scripts/theme-zip.sh",
    "theme:validate": "bunx gscan ./theme/organic-thoughts",
    "theme:upload": "bash ./scripts/theme-upload.sh",
    "theme:publish": "bash ./scripts/theme-zip.sh && bash ./scripts/theme-upload.sh",
    "check:launch": "bash ./scripts/verify-ghost-launch.sh",
    "check:dns": "bash ./scripts/check-dns.sh",
    "check:health": "bash ./scripts/weekly-health-check.sh"
  }
}
