{{!< default}}

<main id="main-content" class="shell">
  <section class="hero reveal">
    <p class="eyebrow">Developer Journal / {{date format="YYYY"}}</p>
    <h1>Thoughts from a software dev with rapidly depreciating skills</h1>
    <p class="hero-copy">
      AI writes better code, faster. It's still pretty dumb though, and at least
      it doesnt know yet what code is useful to write.
    </p>
  </section>

  <div class="content-layout">
    <section
      id="thoughts"
      class="thought-stream"
      aria-labelledby="stream-title"
    >
      <h2 id="stream-title">Recent</h2>

      {{#foreach posts limit="3"}}
        <article class="thought-card reveal-delay-2">
          <p class="thought-meta">
            Thought
            {{@number}}
            /
            {{date format="MMM DD, YYYY"}}
            {{#if primary_tag}} / {{primary_tag.name}}{{/if}}
          </p>
          <h3><a href="{{url}}">{{title}}</a></h3>
          <p>{{excerpt words="30"}}</p>
        </article>
      {{else}}
        <article class="thought-card reveal-delay-2">
          <p class="thought-meta">Thoughts will appear here</p>
          <h3>Publish your next thought</h3>
          <p>New posts in Ghost are automatically rendered in this stream.</p>
        </article>
      {{/foreach}}

      <p class="small-note">
        <a class="read-link" href="{{@site.url}}/thoughts/">View all</a>
      </p>
    </section>

    <aside id="newsletter" class="newsletter reveal-delay-4">
      <h2>Thoughts via email</h2>
      <form class="newsletter-form" data-members-form="subscribe">
        <div class="newsletter-line">
          <label for="newsletter-email-home">
            Drop your email for occasional notes.
          </label>
          <button type="submit" class="newsletter-link">Subscribe</button>
        </div>
        <p class="newsletter-status" aria-live="polite">
          <span class="newsletter-check" aria-hidden="true">âœ“</span>
          Check your email to confirm.
        </p>
        <input
          id="newsletter-email-home"
          type="email"
          data-members-email
          autocomplete="email"
          spellcheck="false"
          placeholder="you@domain.com"
          required
        />
        <p class="newsletter-error" data-members-error></p>
      </form>
    </aside>
  </div>
</main>
