{{!< default}}

{{#post}}
  <main id="main-content" class="shell post-page">
    <article class="post-full {{post_class}}">
      <header class="post-header reveal">
        <p class="eyebrow">
          Thought / {{date format="MMM DD, YYYY"}}
          {{#if primary_tag}} / {{primary_tag.name}}{{/if}}
        </p>
        <h1>{{title}}</h1>
      </header>

      {{#if feature_image}}
        <figure class="post-image reveal-delay-1">
          <img src="{{img_url feature_image size="xl"}}" alt="{{title}}" />
          {{#if feature_image_caption}}
            <figcaption>{{feature_image_caption}}</figcaption>
          {{/if}}
        </figure>
      {{/if}}

      <section class="post-content reveal-delay-2">
        {{content}}
      </section>

      <footer class="post-footer">
        <section class="newsletter newsletter-inline reveal-delay-3">
          <h2>Thoughts via email</h2>
          <form class="newsletter-form" data-members-form="subscribe">
            <div class="newsletter-line">
              <label for="newsletter-email-post">
                Drop your email for occasional notes.
              </label>
              <button type="submit" class="newsletter-link">Subscribe</button>
            </div>
            <input
              id="newsletter-email-post"
              type="email"
              data-members-email
              autocomplete="email"
              spellcheck="false"
              placeholder="you@domain.com"
              required
            />
            <p class="newsletter-status" aria-live="polite">
              <span class="newsletter-check" aria-hidden="true">âœ“</span>
              Check your email for the sign-in link.
            </p>
            <p class="newsletter-error" data-members-error></p>
          </form>
        </section>
        <a class="read-link" href="{{@site.url}}/thoughts/">Back to Thoughts</a>
      </footer>
    </article>
  </main>
{{/post}}
